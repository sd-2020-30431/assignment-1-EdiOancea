{
  "name": "backend",
  "version": "1.0.0",
  "description": "Assignment1 REST API",
  "main": "index.js",
  "dependencies": {
    "bcrypt": "4.0.1",
    "bottlejs": "1.7.2",
    "cors": "^2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "pg": "7.18.2",
    "pg-hstore": "2.3.3",
    "sequelize": "5.21.5",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "scripts": {
    "dev": "ts-node src/server.ts",
    "start": "ts-node src/server.ts",
    "build": "tsc -p .",
    "test": "cross-env NODE_ENV=test jest",
    "migrate": "npx sequelize-cli db:migrate",
