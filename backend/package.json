    "@types/validator": "12.0.1",
    "cross-env": "7.0.2",
    "jest": "25.2.4",
    "sequelize-cli": "^5.5.1",
    "supertest": "4.0.2",
    "ts-jest": "25.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
